<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:metal="http://xml.zope.org/namespaces/metal"
	xmlns:tal="http://xml.zope.org/namespaces/tal"
	xmlns:i18n="http://xml.zope.org/namespaces/i18n" i18n:domain="medialog.flipbook" metal:use-macro="context/main_template/macros/master">

	<!-- <meta name="viewport" content="width = 1050, user-scalable = no" /> -->


	<body>
		<metal:content fill-slot="main">
			<metal:block define-macro="content">

				<!-- <script type="text/javascript" src="++plone++medialog.flipbook/lib/hash.js"></script> -->
				<script type="text/javascript" src="++plone++medialog.flipbook/lib/turn.min.js"></script>
				<!-- <script type="text/javascript" src="++plone++medialog.flipbook/lib/zoom.min.js"></script> -->
				<!-- <script type="text/javascript" src="++plone++medialog.flipbook/magazine.js"></script> -->
				<!-- <link rel="stylesheet" href="++plone++medialog.flipbook/magazine.css"> -->

			

				<div id="flipbook-container">
					<div id="flipbook">
						<div class="page" tal:repeat="image view/get_images">
							<img tal:attributes="src string:${image/url}/@@images/image/large;
                                   alt image/title;
                                   title image/description" />
						</div>
					</div>
				</div>

				<div class="controls">
					<button id="prev-btn">← Previous</button>
					<span class="page-counter">
						<span id="current-page">1</span> /						<span id="total-pages">1</span>
					</span>
					<button id="next-btn">Next →</button>
				</div>

				<div class="zoom-overlay" id="zoom-overlay">
					<span class="zoom-close" id="zoom-close">×</span>
					<img id="zoomed-image" src="" alt="Zoomed image" />
				</div>

				<script>
        $(document).ready(function() {
            var totalPages = $('#flipbook .page').length;
            $('#total-pages').text(totalPages);
            
            // Initialize turn.js
            $('#flipbook').turn({
                width: $('#flipbook').width(),
                height: $('#flipbook').height(),
                autoCenter: true,
                acceleration: true,
                elevation: 50,
                gradients: true,
                when: {
                    turned: function(event, page) {
                        $('#current-page').text(page);
                        updateButtons(page, totalPages);
                    }
                }
            });
            
            // Update button states
            function updateButtons(page, total) {
                $('#prev-btn').prop('disabled', page === 1);
                $('#next-btn').prop('disabled', page === total);
            }
            
            // Navigation buttons
            $('#prev-btn').click(function() {
                $('#flipbook').turn('previous');
            });
            
            $('#next-btn').click(function() {
                $('#flipbook').turn('next');
            });
            
            // Keyboard navigation
            $(document).keydown(function(e) {
                if (e.keyCode === 37) { // Left arrow
                    $('#flipbook').turn('previous');
                } else if (e.keyCode === 39) { // Right arrow
                    $('#flipbook').turn('next');
                }
            });
            
            // Zoom functionality
            $('#flipbook .page img').click(function(e) {
                e.stopPropagation();
                var imgSrc = $(this).attr('src').replace('/large', '?full');
                $('#zoomed-image').attr('src', imgSrc);
                $('#zoom-overlay').css('display', 'flex');
            });
            
			$('#zoom-overlay, #zoom-close, #zoomed-image').click(function() {
                $('#zoom-overlay').hide();
            });
            
            $('#zoomed-image').click(function(e) {
                e.stopPropagation();
            });
            
            // Initialize button state
            updateButtons(1, totalPages);
            
            // Handle window resize
            $(window).resize(function() {
                var flipbook = $('#flipbook');
                flipbook.turn('size', flipbook.parent().width() * 0.9, 
                              flipbook.parent().height() * 0.85);
            });
        });
				</script>

					<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background: #111;
            font-family: Arial, sans-serif;
            overflow: hidden;
        }
        
        #flipbook-container {
            width: 1200px;
            height: 900px;
            display: flex;
            align-items: center;
            justify-content: center;
            xposition: absolute;
			xleft: 0;
			xright: 0;
        }
        
        #flipbook {
            width: 90%;
            height: 85%;
            <!-- box-shadow: 0 20px 80px rgba(0, 0, 0, 0.8); -->
        }
        
        #flipbook .page {
            display: flex;
            xalign-items: center;
            justify-content: center;
            overflow: hidden;

		}
		.page-wrapper {
			box-shadow: 0 20px 80px rgba(0, 0, 0, 0.8);
        }
        
        #flipbook .page img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            cursor: zoom-in;
			box-shadow: 0 20px 80px rgba(0, 0, 0, 0.8);
        }
        
        #flipbook .page img.zoomed {
            cursor: zoom-out;
            cursor: move;
        }
        
        .controls {
            position: fixed;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            background: rgba(0, 0, 0, 0.8);
            padding: 15px 30px;
            border-radius: 30px;
            display: flex;
            gap: 15px;
            align-items: center;
            z-index: 1000;
        }
        
        .controls button {
            background: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: background 0.3s;
        }
        
        .controls button:hover {
            background: #45a049;
        }
        
        .controls button:disabled {
            background: #666;
            cursor: not-allowed;
        }
        
        .page-counter {
            color: white;
            font-size: 16px;
            font-weight: bold;
            min-width: 80px;
            text-align: center;
        }
        
        .zoom-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 2000;
            cursor: zoom-out;
        }
        
        .zoom-overlay img {
            max-width: 95%;
            max-height: 95%;
            object-fit: contain;
        }
        
        .zoom-close {
            position: absolute;
            top: 20px;
            right: 20px;
            color: white;
            font-size: 40px;
            cursor: pointer;
            z-index: 2001;
        }
				</style>


			</metal:block>
		</metal:content>
	</body>
</html>

